{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES6",
        "lib": ["ES2016"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./src/components/*"],
            "@db/*": ["./src/db/*"],
            "@shared/*": ["./src/shared/*"],
            "@loaders": ["./src/loaders"],
            "@loaders/*": ["./src/loaders/*"],
            "@configs/*": ["./src/configs/*"],
            "@utils/*": ["./src/utils/*"],
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": [
        "src/**/*"
    ]
}
